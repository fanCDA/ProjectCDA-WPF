<UserControl x:Class="ProjectCDA.View.Templates.SinglePage.SinglePageTemplateDefault"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">

    <Border Margin="1" Background="LightGray" BorderBrush="Gray" BorderThickness="1">
        <TextBox AcceptsReturn="True" TextWrapping="Wrap" Margin="2"
                 PreviewMouseRightButtonDown="TextBox_PreviewMouseRightButtonDown"
                 Name="Tf1"
                 PreviewDrop="Tf1_PreviewDrop"
                 DragDrop.PreviewQueryContinueDrag="TextBox_PreviewQueryContinueDrag"/>
    </Border>
</UserControl>
